<div class="container px-5 px-sm-0">
  <div class="row mt-5">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <div class="row">
       <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
      </div>
      <%= render 'books/form', book: @book %>
    </div>
    <!-- books部分 -->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
         </tr>
       </thead>
       <tbody>
          <% @users.each do |user| %>
            <tr>
             <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpeg' %></td>
             <td><%= user.name %></td>
             <td><%= link_to "Show", user_path(user.id), :class => "text-info" %></td>
            </tr>
         <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>
