<div class="container">
    <div class="row1">
      <div class="card col-lg-6 col-md-10 col-sm-12 m-auto">
        <div class="card-body">
          <div class = "col mx-auto mt-10">
            <h2>Sign up</h2>
            <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, class: "form-control col m-auto" %>
              </div>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col m-auto" %>
              </div>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control col m-auto" %>
              </div>
              <div class="field mb-3">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col m-auto" %>
              </div>
              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-outline-secondary btn-block" %>
              </div>
            <% end %>
            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>